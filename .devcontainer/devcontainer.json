{
  "name": "ng-lin",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:22",
  "postCreateCommand": "corepack enable && yarn install --frozen-lockfile && yarn global add @angular/cli",
  "containerEnv": {
    "NODE_MAX_OLD_SPACE_SIZE": "16384",
    "PROJECT_TYPE": "angular"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "angular.ng-template",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "forwardPorts": [4200],
  "remoteUser": "node"
}
